<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="delivery_carrier_date_view_tree" model="ir.ui.view">
        <field name="name">delivery.carrier.date.view.tree</field>
        <field name="model">delivery.carrier.date</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="value" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="action_open_commitment_date_exclude" model="ir.actions.act_window">
        <field name="name">Exclude Dates</field>
        <field name="res_model">delivery.carrier.date</field>
        <field name="view_mode">tree</field>
    </record>
    <record id="delivery_carrier_view_form_inherit" model="ir.ui.view">
        <field name="name">delivery.carrier.view.form.inherit</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position="after">
                <page string="Commitment Date" name="commitment_date">
                    <group>
                        <field name="allow_commitment_date" />
                        <field
                            name="min_commitment_days"
                            attrs="{'invisible': [('allow_commitment_date', '=', False)]}"
                        />
                        <field
                            name="max_commitment_days"
                            attrs="{'invisible': [('allow_commitment_date', '=', False)]}"
                        />
                        <field
                            name="exclude_weekday_ids"
                            widget="many2many_tags"
                            attrs="{'invisible': [('allow_commitment_date', '=', False)]}"
                        />
                        <field
                            name="exclude_date_ids"
                            widget="many2many_tags"
                            options="{'no_create': True, 'no_open': True}"
                            attrs="{'invisible': [('allow_commitment_date', '=', False)]}"
                        />
                    </group>
                </page>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                    name="%(action_open_commitment_date_exclude)d"
                    attrs="{'invisible': [('allow_commitment_date', '=', False)]}"
                    string="Exclude Dates"
                    type="action"
                    icon="fa-calendar"
                    class="oe_stat_button"
                />
            </xpath>
        </field>
    </record>
</odoo>
