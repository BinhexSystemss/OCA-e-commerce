<templates>
    <t t-name="website_sale_commitment_date.WebsiteCalendar">
        <div class="o_booking_calendar">
            <table class="table table-responsive-md text-center">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-left">
                            <a
                                class="btn btn-secondary o_website_calendar_prev"
                                title="Previous month"
                                t-att-data-month="month"
                                t-att-data-year="year"
                                t-att-data-start="start"
                            >
                                <i class="fa fa-chevron-left" />
                            </a>
                        </th>
                        <th class="align-middle" colspan="5" t-esc="title" />
                        <th class="text-right">
                            <a
                                class="btn btn-secondary o_website_calendar_next"
                                title="Next month"
                                t-att-data-month="month"
                                t-att-data-year="year"
                                t-att-data-start="start"
                            >
                                <i class="fa fa-chevron-right" />
                            </a>
                        </th>
                    </tr>
                </thead>
                <thead class="thead-dark">
                    <tr>
                        <t t-foreach="weekdays" t-as="weekday">
                            <th t-att-title="weekday" t-esc="weekday" />
                        </t>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="weeks" t-as="week">
                        <tr>
                            <t t-foreach="week" t-as="day">
                                <td
                                    t-attf-class="o_website_calendar_day {{ (day.is_today) ? 'fw-bold' : '' }}"
                                    t-attf-style="{{ (day.is_disabled) ? 'background-color: #D3D3D3;' : '' }}"
                                    t-att-data-disabled="day.is_disabled"
                                    t-att-data-date="day.date"
                                >
                                    <span t-esc="day.day" />
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>
